<div class="col-md-4">
	<div class="panel panel-info">
		<div class="panel-body bg-info">
			<h3>Search for a Flight</h3>
			<%= render "flights/search_form" %>
		</div>
	</div>
</div>
<div class="col-md-8">
	<% if @flights %>

		<% if @flights.any?	%>
			<h2>Select a Flight:</h2>
			<%= render "flights/select_form" %>
		<% else %>
			<p>No flights found. Try a difference search.</p>
		<% end %>

	<% else %>

		<div class="jumbotron text-center">
			<h1><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Start an Adventure</h1>
			<p>Exclusive one-way flights availble.<br>
			<small>Search for a flight now to get started!</small></p>
		</div>
		
	<% end %>
</div>